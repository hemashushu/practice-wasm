#!/bin/zx

// 运行此脚本需要先安装：
//
// - nodejs
// - [zx](https://github.com/google/zx)
// - clang
// - [wasi-sdk](https://github.com/WebAssembly/wasi-sdk)


let envs = process.env;

let wasiSdkPath = envs['WASI_SDK'];

if (wasiSdkPath === undefined ||
    wasiSdkPath === '') {
    console.log(`
set environment variable WASI_SDK to the path of wasi sdk first, e.g.
export WASI_SDK = /opt/wasi-sdk-16.0
    `);
    process.exit(1);
}

let args = process.argv;

if (args.length != 4) {
    console.log(
`Usage:
    ./c2wasi path-to-source.c
`);
    process.exit(1);
}

import 'path';

let filePath = path.resolve(args[3]);

if (!filePath.endsWith('.c')) {
    console.log('Only *.c file is supported.');
    process.exit(1);
}

let pos = filePath.lastIndexOf('.');
let outputFile = filePath.substring(0, pos) + '.wasm';

// 更多参数请参阅
// https://lld.llvm.org/WebAssembly.html
await $`${wasiSdkPath}/bin/clang -O3 -o "${outputFile}" "${filePath}"`

console.log(`output: ${outputFile}`);